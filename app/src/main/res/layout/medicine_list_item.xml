<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_listview_shadow">

        <TextView
            android:id="@+id/trade_label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trade_label"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="5sp"
            android:padding="5sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/trade_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="72sp"
            android:layout_marginBottom="5sp"
            android:textStyle="normal"
            android:layout_toEndOf="@id/trade_label_title"/>

        <TextView
            android:id="@+id/manufacturer_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manufacturer_name"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="5sp"
            android:layout_marginBottom="5sp"
            android:padding="5sp"
            android:textStyle="bold"
            android:layout_below="@id/trade_label_title" />

        <TextView
            android:id="@+id/manufacturer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="55sp"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="20sp"
            android:layout_marginBottom="5sp"
            android:textStyle="normal"
            android:layout_toEndOf="@id/manufacturer_name_title"/>
    </RelativeLayout>

</RelativeLayout>